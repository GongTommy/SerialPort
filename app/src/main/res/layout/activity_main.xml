<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.a18145288.watermac.MainActivity">
    <ImageView
        android:id="@+id/iv_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vpPics"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@mipmap/top_bar"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vpPics"
        app:layout_constraintTop_toBottomOf="@id/iv_top_bar"
        app:layout_constraintBottom_toTopOf="@id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        />
    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@id/vpPics"
        app:layout_constraintBottom_toTopOf="@id/vpWatCon"
        />
    <ImageView
        android:id="@+id/ivVideoBg"
        android:visibility="invisible"
        android:background="@mipmap/video_bg"
        app:layout_constraintTop_toTopOf="@id/surfaceView"
        app:layout_constraintBottom_toBottomOf="@id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="600dp" />
    <com.example.a18145288.watermac.view.SelViewPager
        android:id="@+id/vpWatCon"
        app:layout_constraintTop_toBottomOf="@id/surfaceView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vpFullAds"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</android.support.constraint.ConstraintLayout>
